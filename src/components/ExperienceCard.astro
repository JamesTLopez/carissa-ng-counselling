---
const { index, title, desc, traits } = Astro.props;
---

<div class="flex gap-4 w-full min-h-[250px] ">
  <div class="poppins text-xl font-regular text-ng-primary">0{index + 1}</div>
  <div class="flex flex-col border-b-2 border-ng-text-content w-full">
    <div>
      <h2 class="flex poppins text-xl font-semibold text-ng-primary">{title}</h2>
    </div>
    <div class="min-h-[76px] poppins text-ng-text-content text-md font-[300] leading-5">
      {desc}
    </div>
    <div class="flex-1 flex items-center pt-6">
      <div class="w-full">
        <ul class="grid place-items-start items-center grid-cols-1 list-none p-0 m-0 text-ng-primary-content gap-2">
            <li class="flex flex-col">
              <div class="font-bold text-ng-primary">2020 - 2023</div>
              <div class="font-medium text-ng-primary">MASTER OF ARTS: COUNSELLING PSYCHOLOGY</div>
              <div class="font-regular text-ng-primary">Trinity Western University | Langley, BC</div>
            </li>
        </ul>
      </div>
    </div>
  </div>
</div>

