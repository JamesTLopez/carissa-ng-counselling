<style>
  @media only screen and (max-width: 1000px) {
    .content-area {
      display: flex;
      flex-direction: column-reverse;
      gap: 4rem;
    }
  }

  @media only screen and (min-width: 999px) {
    .content-area {
      display: grid;
      grid-template-columns: 55% 45%;
