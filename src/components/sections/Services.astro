---
import ServiceFormatCard from "../ServiceFormatCard.astro";

import { supportAreas } from "../../assets";
import SectionWrapper from "../layouts/SectionWrapper.astro";
import Title from "../../components/layouts/Title.astro";
import ListItem from "../../components/layouts/ListItem.astro";
import SubTitle from "../../components/layouts/SubTitle.astro";
---

<div class="bg-custom-gradient">
  <SectionWrapper id="services">
    <div class="flex flex-col gap-4">
      <!-- TITLE -->
      <div class="flex flex-col pb-10 text-white items-center justify-center">
        <Title isWhite={false}>
          <span class="italic">Services.</span>
        </Title>
      </div>
      <!-- CONTENT SERVICES -->
      <div class="flex justify-center items-center gap-20 flex-col w-full">
        <div class="flex flex-col gap-10 justify-around items-center">
          <ServiceFormatCard />
        </div>
        <div class="flex flex-col gap-8 w-full">
          <SubTitle> AREAS OF SUPPORT </SubTitle>
          <div
            class="grid lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 flex-wrap"
          >
            {
              supportAreas.map((item) => {
                return <ListItem>{item}</ListItem>;
              })
            }
          </div>
        </div>
      </div>
    </div>
  </SectionWrapper>
</div>
