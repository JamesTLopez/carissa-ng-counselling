---
import SubTitle from "../components/layouts/SubTitle.astro";
import Text from "../components/layouts/Text.astro";
import ListItem from "../components/layouts/ListItem.astro";
import { sessionFormats } from "../assets";
---

<div class="flex flex-col md:flex-row gap-12 w-full pt-12">
  <div class="flex justify-center items-start w-full md:w-1/3 min-w-[350px]">
    <img
      class="aspect-square border-2 border-black"
      alt={sessionFormats.image.alt}
      src={sessionFormats.image.img}
    />
  </div>
  <div
    class="flex flex-col justify-center text-ng-text-content w-full md:w-2/3 gap-8"
  >
    {
      sessionFormats.data.map((item) => {
        return (
          <div>
            <div class="flex flex-col">
              <SubTitle>{item.title}</SubTitle>
              <p class="text-ng-primary-darker tracking-wide text-base font-[400] leading-10">
                {item.price}
              </p>
            </div>
            {!item.price ? (
              <p class="text-ng-primary-darker tracking-wide text-sm font-[400] leading-10">
                Please contact me for more information
              </p>
            ) : null}
            <Text>{item.description}</Text>
            {item.topics && item.topics.length > 0 ? (
              <div class="pt-10 pl-10">
                <ul class="flex flex-col list-disc">
                  {item.topics.map((topic) => {
                    return <ListItem>{topic}</ListItem>;
                  })}
                </ul>
              </div>
            ) : null}
          </div>
        );
      })
    }
  </div>
</div>
